                                        <EllipseGeometry Center="128 128"
                                                         RadiusX="128"
                                                         RadiusY="128" />
                                    </Border.Clip>

                                    <Image Stretch="Uniform" 
                                           Name="imgGreatLogo"
                                           Source="{Binding GreatLogo, Mode=TwoWay, IsAsync=True, Converter={StaticResource byteArrayToBitmapImageConveter}}"
                                       />
                                </Border>

                                <Button Cursor="Hand" 
                                        ToolTip="Changer d'image" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        Width="28" 
                                        Height="28" 
                                        Margin="0 30 0 0"
                                        Command="{Binding ChooseOrganisationGreatLogoCommand}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Width="{TemplateBinding Width}" 
                                                CornerRadius="15" 
                                                Name="border"
                                                Height="{TemplateBinding Height}" 
                                                Background="#CC000000"
                                                BorderBrush="#fff"
