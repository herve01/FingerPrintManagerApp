    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="2">
            <Image Stretch="Uniform" 
                   Source="{Binding ElementName=imgGreatLogo, Path=Source}"
                   Opacity="{Binding ElementName=slideOpacity, Path=Value}"
                   HorizontalAlignment="Right"
                   Margin="10 0"
                   VerticalAlignment="Center"
                   />
        </Border>
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="20 10">
                <StackPanel Visibility="{Binding IsAdmin, Converter={StaticResource boolToVisibilityConverter}}"
                            Margin="0 0 0 30">
                    <StackPanel>
                        <TextBlock Text="Paramètres généraux"
                               FontSize="27"
                               Foreground="#000"
                               FontWeight="Normal"/>

                        <Border MaxWidth="900"
                                BorderThickness="0 1"
                                Margin="0 10"
                                Padding="0 5"
                                HorizontalAlignment="Left"
                                BorderBrush="{DynamicResource Separator.Background}">
                            <TextBlock TextWrapping="WrapWithOverflow"
                                   FontSize="12"
                                   Foreground="#777">
                            Les paramètres généraux sont ceux applicables à l'application entière, c'est-à-dire, à tous les utilisateurs du système, quel que soit l'ordinateur à partir duquel ils s'y connectent.
                            <LineBreak />
                            Ils doivent être configurés au premier lancement du système par l'<Bold>administrateur central</Bold>.
                            </TextBlock>

                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0 5">

                        <TextBlock HorizontalAlignment="Left" 
                                   FontSize="20"
                                   Text="Entreprise"/>

                        <WrapPanel>
                            <StackPanel Width="450" 
                                        Margin="0 10 10 0">
                                <TextBlock Text="DENOMINATION"
                                           FontSize="14"
                                           Typography.Capitals="AllSmallCaps" 
                                       />

                                <TextBox Height="30" 
                                         Text="{Binding OrganisationName, Mode=TwoWay}"
                                         Tag="Le nom de votre entreprise ici"
                                         VerticalContentAlignment="Center" 
                                         Padding="5,0"   
                                         Margin="0 3" 
                                         HorizontalAlignment="Stretch" 
                                         Style="{DynamicResource TextBoxPlaceHolderStyle}" />
                            </StackPanel>

                            <StackPanel Width="500" 
                                        Margin="0 10 10 0">
                                <TextBlock Text="ADRESSE"
                                           FontSize="14"
                                           Typography.Capitals="AllSmallCaps" 
                                       />

                                <TextBox Height="30" 
                                         Text="{Binding OrganisationAddress, Mode=TwoWay}"
                                         Tag="L'adresse complète de votre organisation ici"
                                         VerticalContentAlignment="Center" 
                                         Padding="5,0"  
                                         Margin="0 3" 
                                         HorizontalAlignment="Stretch" 
                                         Style="{DynamicResource TextBoxPlaceHolderStyle}" />
                            </StackPanel>

                        </WrapPanel>

                        <TextBlock Text="LOGOS"
                               FontSize="14"
                               Typography.Capitals="AllSmallCaps" 
                               Margin="0 10 0 0"/>

                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid Margin="0 10 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

