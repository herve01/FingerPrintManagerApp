                                                  Fill="#FFFFFFFF"
                                                  Width="14" 
                                                  Height="14" 
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup Name="CommonStates">
                                                        <VisualState Name="Normal" />
                                                        <VisualState Name="MouseOver">
                                                            <Storyboard>
                                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="border"
                                                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                                    <EasingColorKeyFrame Value="#30000000" KeyTime="0:0:0.2" />
                                                                </ColorAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState Name="Pressed">
                                                            <Storyboard>
                                                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="border"
                                                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
                                                                    <EasingColorKeyFrame Value="#ee000000" KeyTime="0:0:0.2" />
                                                                </ColorAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <StackPanel Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        Margin="0 10">
                                    <TextBlock Text="Application"
                                           FontSize="16"
                                           FontWeight="DemiBold"
                                           HorizontalAlignment="Center"
                                           />

                                    <TextBlock Text="512x512" 
                                           HorizontalAlignment="Center"
                                           Foreground="#999"/>

                                    <Border MaxWidth="180"
                                            BorderThickness="0 1"
                                            Margin="0 3"
                                            Padding="0 3"
                                            BorderBrush="{DynamicResource Separator.Background}">
                                        <TextBlock TextWrapping="WrapWithOverflow"
                                               FontSize="10"
                                               Foreground="#777"
                                               TextAlignment="Center">
                                        Cette image sera utilisée derrière les interfaces de l'application, et aussi comme filigrane des rapports.
                                        </TextBlock>

                                    </Border>


                                </StackPanel>
                            </Grid>

                            <Grid Grid.Column="1"
                              Margin="40 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Border Width="64"
                                    Height="64"
                                    CornerRadius="64"
                                    BorderThickness="1"
                                    BorderBrush="#ccc">
                                    <Border.Clip>
                                        <EllipseGeometry Center="32 32"
                                             RadiusX="32"
                                             RadiusY="32" />
                                    </Border.Clip>

                                    <Image Stretch="Uniform" 
                                           Source="{Binding ReportLogo, Mode=TwoWay, IsAsync=True, Converter={StaticResource byteArrayToBitmapImageConveter}}"
                                       />
                                </Border>

                                <Button Cursor="Hand" 
                                    ToolTip="Changer d'image" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Top"
