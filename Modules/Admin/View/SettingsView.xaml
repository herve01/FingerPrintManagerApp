                                <StackPanel Orientation="Horizontal">
                                    <Slider Template="{DynamicResource HorizontalSlider}"
                                            Width="240"
                                            Name="slideDelay"
                                            Value="{Binding SleepDelay, Mode=TwoWay}"
                                            Minimum="0"
                                            Maximum="60"
                                            Interval="5"
                                            VerticalAlignment="Center"/>

                                    <TextBlock Text="{Binding SleepDelay, StringFormat=\{0:#\}\', TargetNullValue=0\', FallbackValue=0\'}"
