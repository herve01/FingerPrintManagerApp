<UserControl x:Class="FingerPrintManagerApp.Modules.Employe.View.EditEmployeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FingerPrintManagerApp.View"
             xmlns:template="clr-namespace:FingerPrintManagerApp.Modules.Employe.View.Template"
             xmlns:converter="clr-namespace:FingerPrintManagerApp.View.Converter"
             xmlns:interactivity="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             Name="this"
             Background="{StaticResource Window.Background}"
             Width="1000"
             Height="680"
             Loaded="This_Loaded">
    <interactivity:Interaction.Triggers>
        <interactivity:EventTrigger EventName="Loaded">
            <interactivity:InvokeCommandAction Command="{Binding LoadCommand}" />
        </interactivity:EventTrigger>
    </interactivity:Interaction.Triggers>
    <UserControl.Resources>

        <local:BindingProxy x:Key="proxy" Data="{Binding}" />

        <converter:PercentageConverter x:Key="percentageConverter" />
        <converter:ByteArrayToImageConveter x:Key="imageConverter" />
        
        <converter:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <converter:ListViewItemToPositionConverter x:Key="listViewItemToPositionConverter" />
        <converter:ListViewItemPositionToBackgroundConverter x:Key="listViewItemPositionToBackgroundConverter" />

        <ContextMenu x:Key="MenuEnfant">
            <MenuItem Header="Rétirer"
                      Command="{Binding Data.RemoveEnfantCommand, Source={StaticResource proxy}}"
                      CommandParameter="{Binding}"
                      />
        </ContextMenu>

        <DataTemplate x:Key="EmpreinteTemplate">
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="80"
                  Margin="5"
                  MaxHeight="90">
                <Grid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Supprimer l'empreinte"
                                  CommandParameter="{Binding}"
                                  Command="{Binding Data.RemoveEmpreinteCommand, Source={StaticResource proxy}}"
                      />
                    </ContextMenu>
                </Grid.ContextMenu>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border BorderThickness="1"
                        BorderBrush="#30000000"
                        Width="58"
                        Height="72"
                        Padding="1"
                        Margin="-1"
                        Name="brd"
                        CornerRadius="4">
                    <Image Source="{Binding Image, IsAsync=True, Converter={StaticResource imageConverter}}"
                           >
                        <Image.Clip>
                            <RectangleGeometry Rect="0 0 56 70" 
                                               RadiusX="4" 
                                               RadiusY="4"  />
                        </Image.Clip>
                    </Image>
                </Border>

                <TextBlock Text="{Binding Doigt}"
                           Grid.Row="1"
                           Margin="0 3 0 0"
                           TextAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding Doigt}"
                       />
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                    <Setter TargetName="brd" Property="BorderBrush" Value="#000" />
                    <Setter TargetName="brd" Property="BorderThickness" Value="4 4 4 4" />

                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        
        <DataTemplate x:Key="EnfantTemplate">
            <Border Name="border" 
                    Padding="5,5"
                    ContextMenu="{StaticResource MenuEnfant}"
                    >
                <template:EnfantAddTemplate />
            </Border>

        </DataTemplate>

        <DataTemplate x:Key="EnfantViewTemplate">
            <Border Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource listViewItemToPositionConverter}}" 
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontWeight="DemiBold"/>

                    <Border Grid.Column="1" 
                Margin="5,0" />

                    <TextBlock Text="{Binding Enfant.Name}" 
                           Grid.Column="2"
                           FontWeight="DemiBold"/>

                    <Border Grid.Column="3" 
                Margin="5,0" />

                    <TextBlock Text="{Binding Enfant.Sexe}" 
                           Grid.Column="4"/>

                    <Border Grid.Column="5" 
                        Margin="5,0" />

                    <TextBlock Text="{Binding Enfant.DateNaissance, StringFormat={}{0:dd/MM/yyyy}}" 
                               Grid.Column="6"
                               TextAlignment="Right"/>
                </Grid>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="StepHeaderTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="6 6 0 0"
                        Background="#f3f6f9"
                        Padding="20 15"
                        Name="brd"
                        Width="{Binding ElementName=grid, Path=ActualWidth, Converter={StaticResource percentageConverter}, ConverterParameter='25,15'}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Height="30"
                                Width="30"
                                Background="#203699ff"
                                CornerRadius="5"
                                Margin="0 0 10 0"
                                Name="brdNumber">
                            <TextBlock Text="{Binding Id}"
                                       Foreground="#3699ff"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Name="txtNumber"/>
                        </Border>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Foreground="#000"
                                       Name="txtHeader"
                                       TextWrapping="WrapWithOverflow"
                                       />

                            <TextBlock Text="{Binding ToolTip}"
                                       FontSize="12"
                                       TextWrapping="WrapWithOverflow"
                                       />
                        </StackPanel>

                    </Grid>
                </Border>

                <Border Width="5"
                        Grid.Column="1"
                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource separatorConverter}}"/>

            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                    <Setter TargetName="brd" Property="Background" Value="#FFF" />
                    <Setter TargetName="brdNumber" Property="Background" Value="#3699ff" />
                    <Setter TargetName="txtNumber" Property="Foreground" Value="#FFF" />
                    <Setter TargetName="txtHeader" Property="Foreground" Value="#3699ff" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        
        <Storyboard x:Key="fadeInStatusSB">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="brdStatus"
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0"
                                        Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>

            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             Storyboard.TargetName="brdStatus"
                             Duration="0:0:1" 
                             To="1.0" />

            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                             Storyboard.TargetName="brdStatus"
                             Duration="0:0:2" 
                             From="1.0" 
                             To="0.0" 
                             BeginTime="0:0:5"
                             />

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="brdStatus"
                                           Storyboard.TargetProperty="(UIElement.Visibility)"
                                           BeginTime="0:0:7">
                <DiscreteObjectKeyFrame KeyTime="0"
                                        Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition  />
            </Grid.RowDefinitions>

            <Border Background="#fff">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="15"
                                      Color="#523f69"
                                      Opacity=".08"/>
                </Border.Effect>

            </Border>
            
            <Border Background="#fff"
                    Padding="20 15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Title, FallbackValue='Nouvel employé'}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="16"
                               FontWeight="DemiBold"
                               />

                    <Border Grid.Column="1"
                            Margin="20 0"
                            Height="20"
                            Width="1"
                            Background="{StaticResource Separator.Background}" />

                    <TextBlock Text="Entrez les détails de l'employé puis soumettez. (Les champs avec * sont obligatoires)"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               FontSize="13"
                               Grid.Column="3"
                               Margin="0 0 10 0"
                               Foreground="#7e8299"
                               
                               />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="10 0 0 0"
                                Grid.Column="6">

                        <Button Content="Enregistrer"
                                Height="30"
                                FontSize="13.5"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                HorizontalAlignment="Right"
                                HorizontalContentAlignment="Center"
                                Command="{Binding SaveCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Template="{DynamicResource BtnSaveMacStyle}"
                            />
                        
                        <Button Content="Annuler"
                                Height="30"
                                FontSize="13.5"
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Margin="10 0 0 0"
                                HorizontalContentAlignment="Center"
                                Command="{Binding CloseCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Template="{DynamicResource BtnActionMacStyle}"
                            />
                        
                       
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Margin="40 30"
                  Grid.Row="1"
                  Name="grid"
                  >
                <Border CornerRadius="6"
                        Background="{StaticResource Window.Background}"
                        Opacity="1"
                        >
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30"
                                      ShadowDepth="0"
                                      Color="#523f69"
                                          Direction="270"
                                      Opacity=".08"/>
                    </Border.Effect>
                </Border>

                <Grid>
                    <Grid.RowDefinitions>
                         <RowDefinition Height="Auto" />
                         <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ListView Background="Transparent"
                              BorderBrush="Transparent"
                              Margin="-1 0 0 -1"
                              ItemsSource="{Binding SegmentedOptions}"
                              SelectedValue="{Binding SelectedItem}"
                              ItemTemplate="{StaticResource StepHeaderTemplate}" 
                              ItemContainerStyle="{StaticResource ListViewItem.Style.None}"
                              Style="{StaticResource ListView.Horizontal.Style}"
                              IsEnabled="False"/>
                    
                    <Border CornerRadius="0 0 6 6"
                            Background="#fff"
                            Grid.Row="1"
                        >
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Hidden"
                                      Padding="70 20"
                                      Name="scroll">
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center">

                                <!--#region Step 1-->
                                <StackPanel Visibility="{Binding Step1, Converter={StaticResource boolToVisibilityConverter}}">
                                    <TextBlock Text="Identité"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               FontSize="14"
                                               FontWeight="DemiBold"
                                                />

                                    <Border Margin="10 10"
                                            />

                                    <Grid Margin="0 10" 
                                                >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Width="370">
                                            <Button Content="Prendre une photo"
                                                    HorizontalAlignment="Center"
                                                    Template="{StaticResource BtnActionAdobeStyle}"
                                                    Command="{Binding TakePhotoCommand}"/>

                                            <Border Height="10" />
                                            
                                            <Grid Height="180" 
                                                  Width="140"
                                                  HorizontalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition x:Name="shadowColumn"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Height="30" 
                                                        Width="100" 
                                                        Grid.Column="2" 
                                                        CornerRadius="10" 
                                                        Margin="0,0,15,1" 
                                                        HorizontalAlignment="Right" 
                                                        VerticalAlignment="Bottom" 
                                                        Background="#FF858585" 
                                                        RenderTransformOrigin="0.5,0.5">
                                                    <Border.Effect>
                                                        <BlurEffect Radius="10" KernelType="Box" RenderingBias="Quality"/>
                                                    </Border.Effect>
                                                    <Border.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform/>
                                                            <SkewTransform AngleY="-1" AngleX="45"/>
                                                            <RotateTransform Angle="4"/>
                                                            <TranslateTransform/>
                                                        </TransformGroup>
                                                    </Border.RenderTransform>
                                                </Border>
                                                <Border Background="White" 
                                                        BorderBrush="#FFC1C1C1" 
                                                        BorderThickness="1" 
                                                        Grid.ColumnSpan="2">
                                                    <Grid>
                                                        <Path Fill="#DDD"
                                                              Margin="20"
                                                              Stretch="Uniform"
                                                              Data="M13.799998,0C14.6,-6.4474079E-08 15.500002,0.10000609 16.699999,0.19998169 16.699999,0.19998172 21.799997,-0.10000622 22.399995,3.6000081 22.399995,3.6000078 22.899995,5.1999839 23.1,6.399997 23.1,6.399997 23.000002,9.1999863 22.699999,10.600011 22.899995,10.399998 23.199999,10.399998 23.299997,11.100012L23.299997,11.299993C23.500002,12.9 22.000002,13.799994 21.799997,13.500006 21.500002,14.4 21.1,15.400001 20.500002,16.400001L20.500002,18.600015 20.799997,18.699991 20.899995,20.400003 31.099998,25.000011 32,27.300001 0,27.300001 0.90000152,25.000011 11.000003,20.400003 11.100001,18.699991 11.500003,18.600015 11.500003,16.799995C10.799998,16.100014 10.2,15.100014 9.799998,13.799994 9.3999965,13.799994 8.1999995,13.000006 8.299998,11.699987L8.299998,11.500006C8.3999965,10.699986 8.6999995,10.799993 8.8999965,11.000006 8.1999995,9.0000046 6.6000015,4.1000078 9.6999995,3.0000015 9.6999995,3.0000015 9.0000026,-6.4474079E-08 13.799998,0z"
                                                              />
                                                        <Image Stretch="Uniform" 
                                                               Source="{Binding Employe.Photo, IsAsync=True, Converter={StaticResource imageConverter}}" />

                                                    </Grid>
                                                 </Border>
                                            </Grid>
                                        </StackPanel>

                                        <Border Margin="10 20"
                                                Width="1"
                                                Grid.Column="1"
                                                Background="{StaticResource Separator.Background}"/>

                                        <StackPanel Grid.Column="2"
                                                    Width="370">
                                            <Button Content="Scanner des empreintes"
                                                    Template="{StaticResource BtnActionAdobeStyle}"
                                                    Command="{Binding ScanFingerPrintCommand}"
                                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                                    HorizontalAlignment="Center"/>

                                            <Border Height="10" />

                                            <Grid>

                                                <Border BorderBrush="{StaticResource Separator.Background}"
                                                        Visibility="{Binding NoEmpreinte, Converter={StaticResource boolToVisibilityConverter}}"
                                                        BorderThickness="1"
                                                        CornerRadius="10"
                                                        Padding="20">
                                                    <TextBlock Text="Cliquez sur le bouton ci-dessus pour scanner les empreintes digitales de l'employé."
                                                               FontSize="14"
                                                               Foreground="{StaticResource WebControlForeground}"
                                                               TextWrapping="WrapWithOverflow"
                                                               TextAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <ListView ItemsSource="{Binding EmpreintesView}"
                                                          Background="Transparent"
                                                          BorderBrush="Transparent"
                                                          ItemTemplate="{StaticResource EmpreinteTemplate}"
                                                          ItemContainerStyle="{StaticResource ListViewItem.Style.None}"
                                                          Height="200"
                                                          Style="{StaticResource wrapCenterListStyle}" />
                                            </Grid>
                                        </StackPanel>
                                        
                                    </Grid>

                                    <Border Margin="0 5" />
                                    
                                    <WrapPanel>
                                        <StackPanel>
                                            <TextBlock Text="Nom * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <TextBox VerticalContentAlignment="Center" 
                                                             Width="240" 
                                                             Text="{Binding Employe.Nom, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalAlignment="Left" 
                                                             HorizontalContentAlignment="Left"
                                                             Style="{DynamicResource TextBoxWebStyle}" 
                                                             Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                        />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Post-nom * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <TextBox VerticalContentAlignment="Center" 
                                                             Width="240" 
                                                             Text="{Binding Employe.PostNom, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalAlignment="Left" 
                                                             HorizontalContentAlignment="Left"
                                                             Style="{DynamicResource TextBoxWebStyle}" 
                                                             Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                        />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Prénom * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <TextBox VerticalContentAlignment="Center" 
                                                             Width="240" 
                                                             Text="{Binding Employe.Prenom, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalAlignment="Left" 
                                                             HorizontalContentAlignment="Left"
                                                             Style="{DynamicResource TextBoxWebStyle}" 
                                                             Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                        />
                                        </StackPanel>



                                    </WrapPanel>

                                    <Border Margin="0 5" />

                                    <WrapPanel>
                                        <StackPanel>
                                            <TextBlock Text="Sexe * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <ComboBox ItemsSource="{Binding SexesView}"
                                                      SelectedValue="{Binding Employe.Sexe, Mode=TwoWay}"
                                                      Width="240" 
                                                      IsSynchronizedWithCurrentItem="True"
                                                      FontWeight="DemiBold"
                                                      VerticalAlignment="Center" 
                                                      HorizontalAlignment="Stretch" 
                                                      Style="{DynamicResource ComboBoxWebStyle}"
                                                            />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Etat-civil * " 
                                                       VerticalAlignment="Center"
                                                       Style="{StaticResource FieldLabel}"/>

                                            <ComboBox ItemsSource="{Binding EtatsCivilsView}"
                                                              SelectedValue="{Binding Employe.EtatCivil, Mode=TwoWay}"
                                                              Width="240" 
                                                              IsSynchronizedWithCurrentItem="True"
                                                              FontWeight="DemiBold"
                                                              VerticalAlignment="Center" 
                                                              HorizontalAlignment="Stretch" 
                                                              Style="{DynamicResource ComboBoxWebStyle}"
                                                            />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel> 
                                            <TextBlock Text="Nombre d'enfants * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <TextBox VerticalContentAlignment="Center" 
                                                             Width="240" 
                                                             Text="{Binding NombreEnfantString, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalAlignment="Left" 
                                                             HorizontalContentAlignment="Left"
                                                             Style="{DynamicResource TextBoxWebStyle}" 
                                                             Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                        />
                                        </StackPanel>



                                    </WrapPanel>

                                    <Border Margin="0 5" />

                                    <WrapPanel>
                                        <StackPanel>
                                            <TextBlock Text="Lieu de naissance * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <TextBox VerticalContentAlignment="Center" 
                                                             Width="240" 
                                                             Text="{Binding Employe.LieuNaissance, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalAlignment="Left" 
                                                             HorizontalContentAlignment="Left"
                                                             Style="{DynamicResource TextBoxWebStyle}" 
                                                             Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                        />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Date de naissance * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>


                                            <DatePicker Padding="8 10"
                                                        Width="240"
                                                        SelectedDate="{Binding Employe.DateNaissance, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                                        Background="{StaticResource WebControlBackground}"
                                                        Foreground="{StaticResource WebControlForeground}"
                                                        BorderBrush="{StaticResource WebControlBackground}"
                                                        Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"/>
                                        
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Province d'origine " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <ComboBox ItemsSource="{Binding ProvincesOrigineView}"
                                                      SelectedValue="{Binding Employe.ProvinceOrigine, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                                      DisplayMemberPath="Nom"
                                                      Width="240" 
                                                      IsSynchronizedWithCurrentItem="True"
                                                      FontWeight="DemiBold"
                                                      VerticalAlignment="Center" 
                                                      HorizontalAlignment="Stretch" 
                                                      Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                      Style="{DynamicResource ComboBoxWebStyle}"
                                                            />

                                        </StackPanel>



                                    </WrapPanel>

                                    <Border Margin="0 20"
                                                    Height="1"
                                                    Background="{StaticResource Separator.Background.Small}" />

                                    <TextBlock Text="Etudes faites"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       FontSize="14"
                                                       FontWeight="DemiBold"
                                                        />

                                    <Border Margin="0 10"/>

                                    <WrapPanel>
                                        <StackPanel>
                                            <TextBlock Text="Niveau * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <ComboBox ItemsSource="{Binding NiveauxView}"
                                                              SelectedValue="{Binding SelectedNiveau, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                                              DisplayMemberPath="Intitule"
                                                              Width="240" 
                                                              IsSynchronizedWithCurrentItem="True"
                                                              FontWeight="DemiBold"
                                                              VerticalAlignment="Center" 
                                                              HorizontalAlignment="Stretch" 
                                                              Style="{DynamicResource ComboBoxWebStyle}"
                                                              Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                            />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Domaine * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <ComboBox ItemsSource="{Binding DomainesView}"
                                                      SelectedValue="{Binding Employe.CurrentHighEtude.Domaine, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                                      IsEnabled="{Binding Employe.CurrentHighEtude.Niveau.ADomaine}"
                                                      DisplayMemberPath="Intitule"
                                                      Width="240" 
                                                      IsSynchronizedWithCurrentItem="True"
                                                      FontWeight="DemiBold"
                                                      VerticalAlignment="Center" 
                                                      HorizontalAlignment="Stretch" 
                                                      Style="{DynamicResource ComboBoxWebStyle}"
                                                      Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                      />
                                        </StackPanel>

                                        <Border Width="20" />

                                        <StackPanel>
                                            <TextBlock Text="Année d'obtention *" 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <ComboBox ItemsSource="{Binding AnneesView}"
                                                      SelectedValue="{Binding Employe.CurrentHighEtude.Annee, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                                      Width="240" 
                                                      IsSynchronizedWithCurrentItem="True"
                                                      FontWeight="DemiBold"
                                                      VerticalAlignment="Center" 
                                                      HorizontalAlignment="Stretch" 
                                                      Style="{DynamicResource ComboBoxWebStyle}"
                                                      Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                            />
                                        </StackPanel>



                                    </WrapPanel>

                                    <Border Margin="0 20"
                                                    Height="1"
                                                    Background="{StaticResource Separator.Background.Small}" />

                                    <TextBlock Text="Contacts"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Left"
                                                       FontSize="14"
                                                       FontWeight="DemiBold"
                                                        />

                                    <Border Margin="0 10"/>

                                    <WrapPanel>
                                        <StackPanel>
                                            <TextBlock Text="Numéro de téléphone * " 
                                                               VerticalAlignment="Center"
                                                               Style="{StaticResource FieldLabel}"/>

                                            <TextBox VerticalContentAlignment="Center" 
                                                             Width="370" 
                                                             Text="{Binding Employe.Telephone, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalAlignment="Left" 
                                                             HorizontalContentAlignment="Left"
                                                             Style="{DynamicResource TextBoxWebStyle}" 
                                                             Validation.ErrorTemplate="{DynamicResource BorderValidationFailedTemplate}"
                                                        />
                                        </StackPanel>

