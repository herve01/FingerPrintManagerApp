<Application x:Class="FingerPrintManagerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FingerPrintManagerApp"
             xmlns:viewModel="clr-namespace:FingerPrintManagerApp.ViewModel"
             xmlns:view="clr-namespace:FingerPrintManagerApp.View"
             
             xmlns:adm_vm="clr-namespace:FingerPrintManagerApp.Modules.Admin.ViewModel"
             xmlns:adm_view="clr-namespace:FingerPrintManagerApp.Modules.Admin.View"
             xmlns:employe_vm="clr-namespace:FingerPrintManagerApp.Modules.Employe.ViewModel"
             xmlns:employe_view="clr-namespace:FingerPrintManagerApp.Modules.Employe.View"
             
             xmlns:presence_vm="clr-namespace:FingerPrintManagerApp.Modules.Presence.ViewModel"
             xmlns:presence_view="clr-namespace:FingerPrintManagerApp.Modules.Presence.View"
              xmlns:dialog="clr-namespace:FingerPrintManagerApp.Dialog.View"
            
             StartupUri="View/Main.xaml"
             DispatcherUnhandledException="Application_DispatcherUnhandledException"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Theme/CalendarStyle.xaml" />
                <ResourceDictionary Source="View/Theme/Light.xaml" />
                <ResourceDictionary Source="View/Theme/General.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type dialog:DialogYesNoViewModel}">
                <dialog:DialogYesNo />
            </DataTemplate>

            <!--  Models -->
            <viewModel:ViewModelLocator x:Key="viewModelLocator" />

            <!--#region Admin -->
            <DataTemplate DataType="{x:Type adm_vm:AdminCtrlViewModel}">
                <adm_view:AdminCrtlView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adm_vm:AdminPresentationViewModel}">
                <adm_view:AdminPresentationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adm_vm:ConnectorViewModel}">
                <adm_view:ConnectorView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adm_vm:UserViewModel}">
                <adm_view:UserView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adm_vm:LogViewModel}">
                <adm_view:LogView />
            </DataTemplate>

            <!--<DataTemplate DataType="{x:Type adm_vm:SettingsViewModel}">
          <adm_view:SettingsView />
      </DataTemplate>-->

            <!--#endregion-->

            <!--#region Global-->
            <DataTemplate DataType="{x:Type viewModel:MainWindowPresenterViewModel}">
                <view:MainWindowPresentationView />
            </DataTemplate>
            <!--#endregion-->

           

            <!--#region Employe -->
            <DataTemplate DataType="{x:Type employe_vm:EmployeCtrlViewModel}">
                <employe_view:EmployeCtrlView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EmployeDefaultViewModel}">
                <employe_view:EmployeDefaultView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EmployeListViewModel}">
                <employe_view:EmployeListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EmployeChoiceListViewModel}">
                <employe_view:EmployeChoiceListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EmployeMultiChoiceListViewModel}">
                <employe_view:EmployeMultiChoiceListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EditEmployeViewModel}">
                <employe_view:EditEmployeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:DirectionViewModel}">
                <employe_view:DirectionView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:DepartementViewModel}">
                <employe_view:DepartementView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:AffectationViewModel}">
                <employe_view:AffectationView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EntiteViewModel}">
                <employe_view:EntiteView />
            </DataTemplate>


            <DataTemplate DataType="{x:Type employe_vm:FingerPrintViewModel}">
                <employe_view:FingerPrintView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:EmployeDetailsViewModel}">
                <employe_view:EmployeDetailsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:FonctionViewModel}">
                <employe_view:FonctionView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type employe_vm:NiveauEtudeViewModel}">
                <employe_view:NiveauEtudeView />
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type employe_vm:DomaineEtudeViewModel}">
                <employe_view:DomaineEtudeView />
            </DataTemplate>

            <!--#endregion-->


            <!--Presence-->
            <DataTemplate DataType="{x:Type presence_vm:PresenceEmployeViewModel}">
                <presence_view:PresenceEmployeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type presence_vm:PresenceDefaultViewModel}">
                <presence_view:PresenceDefaultView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type presence_vm:PresenceCtrlViewModel}">
                <presence_view:PresenceCtrlView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type presence_vm:SuiviViewModel}">
                <presence_view:SuiviView />
            </DataTemplate>
            <!--#endregion-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
