                        Background="#DDD"  
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="0 4 4 0"
                        BorderThickness="1"
                        Panel.ZIndex="10"
                        Padding="0,5">
                    <Path x:Name="Arrow"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="0,1"
                          Data="M 0 0 L 0 2 L 4 6 L 8 2 L 8 0 L 4 4 L 0 0 z" 
                          Fill="#000" 
                          Width="10" 
                          Stretch="Uniform" />
                </Border>


            </Grid>
        </Border>
    </ControlTemplate>

