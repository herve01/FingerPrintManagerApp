<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:convert="clr-namespace:FingerPrintManagerApp.View.Converter"
                    xmlns:local="clr-namespace:FingerPrintManagerApp.View.Theme">

    <convert:NullToVisibilityConverter x:Key="nullToVisibilityConverter" />
    <convert:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
    <convert:PathDataConverter x:Key="pathDataConverter" />
    <convert:PercentageConverter x:Key="percentageConverter" />
    <convert:ToUpperCaseConverter x:Key="toUpperCaseConverter" />
    <convert:ListViewItemPositionToBackgroundConverter x:Key="listViewItemPositionToBackgroundConverter" />

    <Color x:Key="DisabledForegroundColor">#FF888888</Color>
    <Color x:Key="SelectedBackgroundColor">#FFC5CBF9</Color>
    <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>
    <Color x:Key="Primary.Color">#5f2cab</Color>

    <SolidColorBrush x:Key="Separator.Background" Color="#eaeaea" />
    <SolidColorBrush x:Key="Separator.Background.Small" Color="#fafafa" />
    <SolidColorBrush x:Key="Window.Background" Color="#f2f3f8" />
    <SolidColorBrush x:Key="Window.Star.Background" Color="#05eb4235" />
    <SolidColorBrush x:Key="Primary.Foreground" Color="#AA000000" />
    <SolidColorBrush x:Key="Primary.ColorBrush" Color="{StaticResource Primary.Color}" />
    <SolidColorBrush x:Key="Secondary.Color" Color="#FFEA1257" />
    <SolidColorBrush x:Key="MenuBar.Background" Color="#fff" />

    <Color x:Key="Menu.Vertical.Color">#fff</Color>
    <SolidColorBrush x:Key="Menu.Vertical.Background" Color="{StaticResource Menu.Vertical.Color}" />
    <Color x:Key="Primary.Blue.Color">#2887f2</Color>
    <SolidColorBrush x:Key="Primary.Blue.Background" Color="{StaticResource Primary.Blue.Color}"/>
    
    
    <SolidColorBrush x:Key="Item.Group.Background" Color="#99ebebeb" />
    
    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="Item.Group.Background.Gradient">
        <GradientStop Color="#FFF4F4F4" Offset="0"/>
        <GradientStop Color="#FFE6E6E6" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="Item.Presentation.Color">#bbf7f7f9</Color>
    <SolidColorBrush x:Key="Item.Presentation.Background" Color="{StaticResource Item.Presentation.Color}" />

    <ControlTemplate x:Key="BorderValidationFailedTemplate">
        <StackPanel Orientation="Horizontal">
            <AdornedElementPlaceholder />
        </StackPanel>
    </ControlTemplate>

    <ControlTemplate x:Key="BadgeValidationFailedTemplate">
        <StackPanel Orientation="Horizontal">
            <AdornedElementPlaceholder Name="adorner"/>

            <Border Background="Red"
                        Width="15"
                        Height="15"
                        CornerRadius="8"
                        Margin="5 0"
                        VerticalAlignment="Center"
                        ToolTip="{Binding ElementName=adorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"
                        >
                <TextBlock Text="!"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#fff" />
            </Border>
        </StackPanel>
    </ControlTemplate>

    <Style TargetType="TextBlock" x:Key="FieldLabel">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#3f4254" />
        <Setter Property="Margin" Value="0 0 0 5" />
    </Style>
    
    <Style TargetType="ListViewItem" x:Key="Navigation.Vertical.MenuItemStyle">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            HorizontalAlignment="Stretch"
                            >
                        <ContentPresenter VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch"/>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected" />
                                <VisualState x:Name="Selected" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListViewItem" x:Key="Navigation.Vertical.MenuItemStyle.Accessibility">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="IsEnabled" Value="{Binding IsAccessible}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            HorizontalAlignment="Stretch"
                            >
                        <ContentPresenter VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch"/>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="SelectionStates">
                                <VisualState x:Name="Unselected" />
                                <VisualState x:Name="Selected" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="Navigation.Vertical.MenuItemTemplate">
        <Border Height="50" 
                Width="Auto" 
                Background="#00FFFFFF" 
                x:Name="border" 
                BorderThickness="0"
                ToolTip="{Binding OptionItem.ToolTip}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Path Data="{Binding OptionItem.IconPathData, Converter={StaticResource pathDataConverter}}" 
                      Fill="#111"
                      x:Name="path"
                      Stretch="Uniform"
                      Width="18"
                      Height="18"
                      Margin="10,0"
                      Grid.Column="0"/>

                <Border Grid.Column="0" 
                       Width="4" 
                       Name="indicator" 
                       Background="Transparent"
                       Margin="0,10"
                        HorizontalAlignment="Left"
                       />

                <TextBlock x:Name="content"
                           TextBlock.FontSize="15"
                           TextBlock.TextAlignment="Left"
                           TextBlock.Foreground="#111"
                           VerticalAlignment="Center"
                           Margin="7,2"
                           Text="{Binding OptionItem.Name}"
                           TextTrimming="CharacterEllipsis"
                           Grid.Column="1"
                           />
            </Grid>
        </Border>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                <Setter TargetName="indicator" Property="Background" Value="{StaticResource Primary.ColorBrush}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsEnabled}" Value="False">
                <Setter TargetName="path" Property="Fill" Value="#BBB" />
                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#BBB" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <DataTemplate x:Key="Navigation.Vertical.MenuItemTemplate2">
        <Border Background="#00FFFFFF" 
                x:Name="border" 
                BorderThickness="0"
                MaxHeight="70"
                ToolTip="{Binding OptionItem.ToolTip}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border CornerRadius="15"
                        Margin="5"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Top">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFFECFE" Offset="0"/>
                            <GradientStop Color="#FFE2FAFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Path Name="path"
                          Stretch="Uniform"
                          Width="15"
                          Height="15"
                          Grid.Column="0"
                          Data="{Binding OptionItem.IconPathData, Converter={StaticResource pathDataConverter}}">
                        <Path.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFD80D8E" Offset="0"/>
                                <GradientStop Color="#FF2FB3B9" Offset="1"/>
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                </Border>
                
                <TextBlock x:Name="content"
                           TextBlock.FontSize="15"
                           TextBlock.TextAlignment="Left"
                           TextBlock.Foreground="#555"
                           VerticalAlignment="Center"
                           Margin="5,2"
                           Text="{Binding OptionItem.Name}"
                           TextWrapping="WrapWithOverflow"
                           TextTrimming="CharacterEllipsis"
                           Grid.Column="1"
                           />
            </Grid>
        </Border>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                <Setter TargetName="border" Property="Background" Value="{StaticResource Primary.ColorBrush}" />
                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#fff" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsEnabled}" Value="False">
                <Setter TargetName="path" Property="Fill" Value="#BBB" />
                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#BBB" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <DataTemplate x:Key="verticalVMOptionTemplate">
        <Border Height="50" 
                Width="Auto" 
                BorderBrush="#dadada" 
                Background="#00FFFFFF" 
                x:Name="border" 
                BorderThickness="0"
                ToolTip="{Binding OptionItem.ToolTip}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <Path Data="{Binding OptionItem.IconPathData, Converter={StaticResource pathDataConverter}}" 
                      Fill="#111"
                      x:Name="path"
                      Stretch="Uniform"
                      Width="18"
                      Height="18"
                      Margin="10,0"
                      Grid.Column="0"/>

                <TextBlock x:Name="content"
                           TextBlock.FontSize="15"
                           TextBlock.TextAlignment="Left"
                           TextBlock.FontWeight="SemiBold"
                           TextBlock.Foreground="#111"
                           VerticalAlignment="Center"
                           Margin="7,2"
                           Text="{Binding OptionItem.Name}"
                           Grid.Column="1"
                           />
            </Grid>
        </Border>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=IsSelected}" Value="True">
                <Setter TargetName="border" Property="Background" Value="#ff7002" />
                <Setter TargetName="path" Property="Fill" Value="#fff" />
                <Setter TargetName="content" Property="TextBlock.Foreground" Value="#DDffffff" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
    
    <ControlTemplate x:Key="ButtonNavCommandStyle" TargetType="{x:Type Button}">
        <Border Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}"
                CornerRadius="50"
                BorderThickness="2"
                BorderBrush="#999"
                Background="#20ffffff"
                Name="border">
            <Path Fill="#333"
                  Name="path"
                  Stretch="Uniform"
                  Margin="3"
                  StrokeThickness="1.2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Data="{TemplateBinding Tag, Converter={StaticResource pathDataConverter}}"
                  />

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame Value="#333"
                                                      KeyTime="0:0:0"
                                                      />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState Name="Disabled">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="border"
                                                               Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame Value="#20000000"
                                                          KeyTime="0:0:0"
                                                          />
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="path"
                                                               Storyboard.TargetProperty="(Path.Fill).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame Value="#20000000"
                                                          KeyTime="0:0:0"
                                                          />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="SimpleOptionStyle" TargetType="{x:Type RadioButton}">
        <Grid>
            <ContentPresenter TextBlock.FontSize="11"
                              TextBlock.FontWeight="Bold"
                              TextBlock.Foreground="#DD777777"
                              TextBlock.FontStyle="Normal"
                              Name="content"
                              Margin="{TemplateBinding Margin}"/>

            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="MouseOver">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content"
                                                           Storyboard.TargetProperty="(TextBlock.FontStyle)">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <FontStyle>Italic</FontStyle>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup Name="CheckStates">
                    <VisualState Name="Unchecked" />
                    <VisualState Name="Checked">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="content"
                                                           Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame Value="#000"
                                                      KeyTime="0:0:0"
                                                      />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>

